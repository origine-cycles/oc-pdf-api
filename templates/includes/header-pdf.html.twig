<style>
    html {
        background: #000;
    }

    body {
        background: #fff;
        font-size: 11pt;
        margin: auto;
        padding: 0.5cm 0;
        width: 21cm;
        height: 100%;
        position: relative;
        font-family: "Open Sans", sans-serif;
    }

    body > section {
        max-width: 19cm;
        margin: auto;
    }

    h1, h2, h3, h4 {
        margin: 0;
        padding: 0;
    }

    h1 {
        font-size: 18pt;
        font-weight: 600;
    }

    h2 {
        font-size: 15pt;
        font-weight: 400;
        line-height: 0.8em;
    }

    h2 small {
        font-size:10pt;
    }

    h3 {
        font-size: 13pt;
        font-weight: 400;
    }

    p {
        margin: 0.125rem 0;
    }

    .other-pages{
        page-break-before: auto;
    }

    #header {
        display: block;
        max-width: 100%;
        height: auto;
        background: #f2f6f7;
        padding: 0.5cm 1cm;
        margin-bottom: 1cm;
    }

    .logo {
        display: inline-block;
        width: 50%;
        margin-top: 1rem;
        margin-right: 5%;
        vertical-align: middle;
    }

    .logo img {
        width: 75%;
        height: auto;
    }

    .title {
        display: inline-block;
        width: 40%;
        vertical-align: middle;
    }
</style>

<section id="header">

    <div class="logo">
        <img src="https://www.origine-cycles.com/themes/origine/style/images/logo-origine-bleu.svg" alt="Logo Origine Cycles">
    </div>

    <div class="title">
        <h1>{{ document_title }}</h1>
        <h2>
            {% if document_number %}{{ document_number }}<br>{% endif %}
            <small>Date : {{ document_date }}</small>
        </h2>
    </title>

</section>