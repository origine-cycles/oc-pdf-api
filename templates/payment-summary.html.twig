{% include 'modules/information-addresses.html.twig' %}

<section class="block-information">

    <div class="block">
        <strong>{{ txt.order }} :</strong> n° {{ order_id }} {{ txt.of }} {{ order_date }}<br>
        <strong>{{ txt.invoice }} :</strong>{% if billing_id is defined and billing_id %}
